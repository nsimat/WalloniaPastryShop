
@model IEnumerable<Category> 

    <li class="dropdown mx-3">
        <a asp-controller="Pie" asp-action="Index" class="dropdown-toggle" data-toggle="dropdown">
            Pies<b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            @foreach(var category in Model)
            {
                <li class="dropdown-item">
                    <a asp-controller="Pie" asp-action="List" asp-route-category="@category.CategoryName">@category.CategoryName</a>
                </li>
            }
            <li class="dropdown-divider"></li>
            <li class="dropdown-item">
                <a asp-controller="Pie" asp-action="List" asp-route-category="">View all pies</a>
            </li>
        </ul>
    </li>