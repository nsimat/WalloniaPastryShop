<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" , initial-scale="1.0" />
    <title>@ViewBag.Title - Wallonia Pastry Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-lumen.css" />
    <link rel="stylesheet" href="~/content/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-fixed-top bg-dark mb-3" role="navigation">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">WalloniaPastryShop</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarWalloniaPastryShop" aria-controls="navbarWalloniaPastryShop"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarWalloniaPastryShop">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active mx-3">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>                    
                    @*<li class="nav-item mx-2">*@
                    @await Component.InvokeAsync("CategoryMenu")
                    @*</li>*@
                    <li class="nav-item mx-3">
                        <a class="nav-link text-white" asp-controller="Contact" asp-action="Index">Contact</a>
                    </li>
                    @await Component.InvokeAsync("ShoppingCartSummary")
                    @*<partial name="_LoginPartial" />*@
                </ul>
                <ul class="navbar-nav my-2 my-lg-0">
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-3 float-md-left">
                <p class="lead">
                    <img class="img-fluid" src="~/images/bethanylogo.png" alt="Wallonia Pastry Shop" />
                </p>
            </div>
            <div class="col-md-9 float-md-left">
                @RenderBody()
            </div>
        </div>
        @RenderSection("Scripts", required: false)
    </div>
    

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
</body>
</html>
